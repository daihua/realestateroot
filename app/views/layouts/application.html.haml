!!! Strict
%html{html_attrs}
  
  %head
    %title
      = h(yield(:title) || "Search all real estate sites at once! RealEstateRoot.com")
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=UTF-8"}/
    %meta{"http-equiv" => "X-UA-Compatible", :content => "chrome=1"}
    %meta{:content=>"ep7phYOL-Y7q-K9ucZrDZPQIQkOXwiXSLufjpNGFwEU", :name => "google-site-verification"}/
    %meta{:content=>"Search homes at multi popular real estate sites at once, such as trulia, zillow, realtor, homes, yahoo real estate, and century21. RealEstateRoot is a free real estate search engine where you can search via zipcode, city and state", :name=>"description"}/
    %meta{:content=>"real estate, homes for sale, homes, home, houses for sale, new homes for sale, real estate for sale, real estate listings, find a home, trulia, zillow, realtor, yahoo real estate, century21, real estate search", :name=>"keywords"}/
    = stylesheet 'application_new'
    %link{:rel=>"stylesheet", :href=>"stylesheets/blueprint/screen.css", :media=>"screen, projection", :type=>"text/css"}
    %link{:rel=>"stylesheet", :href=>"stylesheets/blueprint/print.css", :media=>"print", :type=>"text/css"}
    <!--[if lt IE 8]>
    %link{:rel=>"stylesheet", :href=>"stylesheets/blueprint/ie.css", :media=>"screen, projection", :type=>"text/css"}
    <![endif]-->
    
    = javascript_include_tag "jquery/jquery.min.js", "jquery/jquery-ui.min.js", "jquery.easing.1.3.js", "jquery.scrollTo-min.js", "auto_complete.js", "address_auto_complete.js", "application.js"
    = yield(:head)
  
  %body
    #toolbar.container
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"

      - if show_title?
        %h1=h yield(:title)

      = yield
    .search_results
      = render :partial => "search/search_properties"    
    .clear
    #start.container
      = render :partial => "shared/home_start"
    #footer_wrap
      #footer Copyright Â© 2009 Real Estate Root

    :javascript
      var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
      document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
    :javascript
      try {
      var pageTracker = _gat._getTracker("UA-12233086-1");
      pageTracker._trackPageview();
      } catch(err) {}
    :javascript
      var uservoiceOptions = {
      /* required */
        key: 'realestateroot',
        host: 'realestateroot.uservoice.com', 
        forum: '37086',
        showTab: true,  
        /* optional */
        alignment: 'left',
        background_color:'blue', 
        text_color: 'white',
        hover_color: '#06C',
        lang: 'en'}
    %script{:type => "text/javascript",
            :src => "http://cdn.uservoice.com/javascripts/widgets/tab.js"}
